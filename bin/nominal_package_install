#!/bin/sh

MYPATH=$(realpath "$0")
TWOPI=$(dirname "$MYPATH")/twopi

function call_twopi() {
    $COMPONENT=$1
    $TWOPI clone $COMPONENT=$1
    $TWOPI build $COMPONENT=$1
    $TWOPI clean $COMPONENT=$1    
}

call_twopi hypre
call_twopi metis
call_twopi parmetis
call_twopi MUMPS

$TWOPI clone mfem
$TWOPI clone mfems
$TWOPI clone mfemp

call_twopi PyMFEM
call_twopi PetraM_Base
call_twopi PetraM_RF
call_twopi PetraM_Geom
call_twopi PetraM_Driver
call_twopi PetraM_MUMPS

